doctype html
html
    head
        title Create
        link(href='../lib/bootstrap/css/bootstrap.min.css', rel='stylesheet')
        script(src='../lib/bootstrap/js/bootstrap.min.js')
        script(src='../lib/jquery.js')
        link(href='../bin/css/createWish.css' rel='stylesheet')
        script(src='../bin/js/createWish.js')

    body
        div.link.row
            a.col-md-4.btn-link(href='/') 首页
            a.col-md-4.btn-link(href='/usr') 个人页面
            a.col-md-4.btn-link(href='/') 退出

        div.userInfo
